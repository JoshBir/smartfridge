# SmartFridge Environment Configuration
# Copy this file to .env and configure for your environment

# Flask Configuration
FLASK_CONFIG=development
FLASK_DEBUG=1
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
WTF_CSRF_SECRET_KEY=another-secret-key-for-csrf-tokens

# Database
# Development: SQLite (default)
DATABASE_URL=sqlite:///smartfridge.db
# Production: PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/smartfridge

# Session Configuration
SESSION_TYPE=filesystem
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# AI Recipe Suggestions
# Options: local, openai, azure, gemini, groq, mock
AI_PROVIDER=local
AI_API_KEY=

# AI Model (depends on provider, leave empty for defaults)
# OpenAI: gpt-3.5-turbo, gpt-4
# Gemini: gemini-1.5-flash, gemini-1.5-pro
# Groq: llama-3.1-8b-instant, mixtral-8x7b-32768
AI_MODEL=

# -- FREE AI OPTIONS --
# Gemini (recommended): Get free key at https://makersuite.google.com/app/apikey
# AI_PROVIDER=gemini
# AI_API_KEY=your-gemini-api-key

# Groq (fast): Get free key at https://console.groq.com/keys
# AI_PROVIDER=groq
# AI_API_KEY=your-groq-api-key

# Azure OpenAI Configuration (if using azure provider)
AI_AZURE_ENDPOINT=https://your-resource.openai.azure.com/

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day, 50 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/smartfridge.log

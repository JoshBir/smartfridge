# SmartFridge Environment Configuration
# Copy this file to .env and configure for your environment

# Flask Configuration
FLASK_CONFIG=development
FLASK_DEBUG=1
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
WTF_CSRF_SECRET_KEY=another-secret-key-for-csrf-tokens

# Database
DATABASE_URL=sqlite:///smartfridge.db

# Session Configuration
SESSION_TYPE=filesystem
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# AI Recipe Suggestions
# Options: local, openai, azure, gemini, groq, openrouter, mock
AI_PROVIDER=openrouter
AI_API_KEY=your-api-key-here
AI_MODEL=meta-llama/llama-3.2-3b-instruct:free

# -- FREE AI OPTIONS --
# OpenRouter (recommended): https://openrouter.ai/keys
# Free models: meta-llama/llama-3.2-3b-instruct:free, google/gemma-2-9b-it:free
# AI_PROVIDER=openrouter
# AI_API_KEY=sk-or-v1-your-key
# AI_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Gemini: https://aistudio.google.com/app/apikey
# AI_PROVIDER=gemini
# AI_API_KEY=your-gemini-key
# AI_MODEL=gemini-2.0-flash

# Groq: https://console.groq.com/keys
# AI_PROVIDER=groq
# AI_API_KEY=gsk_your-groq-key
# AI_MODEL=llama-3.1-8b-instant

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day, 50 per hour

# Logging
LOG_LEVEL=INFO
